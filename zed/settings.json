{
  "vim_mode": true,
  "ui_font_size": 14,
  "relative_line_numbers": true,
  "buffer_font_size": 14,
  "use_autoclose": true,
  "wrap_guides": [80],
  "theme": "Gruvbox Dark Hard",
  "scrollbar": {
    "show": "never"
  },
  // "ui_font_family": "BerkeleyMono Nerd Font Mono",
  // "buffer_font_family": "BerkeleyMono Nerd Font Mono",
  "buffer_line_height": {
    "custom": 1.25
  },
  "terminal": {
    "dock": "bottom",
    "font_size": 13,
    "font_family": "BerkeleyMono Nerd Font Mono",
    "line_height": {
      "custom": 1.25
    },
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  },
  "features": {
    "inline_completion_provider": "zed"
  },
  "indent_guides": { "enabled": false },
  // "inlay_hints": {
  //   "enabled": true
  // },
  // "assistant": {
  //   "default_model": {
  //     "provider": "zed.dev",
  //     "model": "claude-3-5-sonnet-latest"
  //   },
  //   "version": "2"
  // },
  "soft_wrap": "none",
  "cursor_blink": false,
  "current_line_highlight": "none",
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_code_navigation": false
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "experimental": {
          "classRegex": [
            ["cva\\(((?:[^()]|\\([^()]*\\))*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
            ["cx\\(((?:[^()]|\\([^()]*\\))*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
          ]
        }
      }
    }
  }
}
